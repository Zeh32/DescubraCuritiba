<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jgaug.descubracuritiba.Activities.FirstScreen">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:contentDescription="@string/background_image_description"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/background"/>

    <Button
        android:id="@+id/btnCreateItinerary"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/btnManageSavedItineraries"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@color/colorPrimary"
        android:onClick="btnCreateItinerary"
        android:text="@string/create_itinerary"
        />

    <Button
        android:id="@+id/btnManageSavedItineraries"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/btnPlacesToVisit"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@color/colorSecondary"
        android:onClick="btnManageSavedItineraries"
        android:text="@string/use_last_saved_route"/>

    <Button
        android:id="@+id/btnPlacesToVisit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="75dp"
        android:background="@color/colorPrimary"
        android:onClick="btnPlacesToVisit"
        android:text="@string/places_to_visit"/>

</RelativeLayout>
